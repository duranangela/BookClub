<div class='form'>
  <%= form_for [@user, @suggestion] do |f| %>
    <div>
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :rating %>
      <%= f.select :rating, [5, 4, 3, 2, 1]%>
    </div>
    <div>
      <%= f.label :comment %>
      <%= f.text_field :comment %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
