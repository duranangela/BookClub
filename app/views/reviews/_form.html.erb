<div class='form'>
  <%= form_for [@book, @review] do |f| %>
    <div>
      <%= f.label :rating %>
      <%= f.select :rating, [5, 4, 3, 2, 1]%>
    </div><br>
    <div>
      <%= f.label :comment %>
      <%= f.text_area :comment, cols: 30, rows: 5 %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
