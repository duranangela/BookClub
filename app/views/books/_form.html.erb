<div class='form'>
  <%= form_for [@author, @book] do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :year %>
      <%= f.number_field :year %>
    </div>
    <div>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
